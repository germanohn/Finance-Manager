<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" 
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.0" 
		 	 xsi:schemalocation="https://jakarta.ee/xml/ns/persistence 
		 	 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="financemanager">
        <properties>
	    	<property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
	    	<property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/financemanager" />
	    	<property name="jakarta.persistence.jdbc.user" value="financemanager" />
	    	<property name="jakarta.persistence.jdbc.password" value="financemanager" />
	    	<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
	    	<property name="hibernate.show_sql" value="true" />
	    	<property name="hibernate.format_sql" value="true" />
	    	<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
    </persistence-unit>
</persistence>